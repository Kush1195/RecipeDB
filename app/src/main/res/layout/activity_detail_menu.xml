<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_list"
    android:orientation="vertical"
    tools:context="com.example.admin.recipedb.DetailMenu">

        <LinearLayout
            android:background="@drawable/topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="90px"
                android:layout_height="90px"
                android:paddingLeft="@dimen/_8sdp"
                android:src="@drawable/previous_unpress" />
            <ImageView
                android:visibility="invisible"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/previous_press" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/raleway_medium"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

            <Button
                android:id="@+id/button_fav"
                android:layout_width="96px"
                android:layout_height="96px"
                android:background="@drawable/favorite_unpress" />

            <Button
                android:id="@+id/button_share"
                android:layout_width="96px"
                android:layout_height="96px"
                android:background="@drawable/share_unpress" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242121"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button_prev"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/previous_unpress"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:background="#242121">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/white_border"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#242121">

                    <ImageView
                        android:id="@+id/detail_imageView"
                        android:layout_width="222px"
                        android:layout_height="222px"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recipe" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="false"
                android:gravity="center"
                android:text="title"
                android:paddingLeft="@dimen/_4sdp"
                android:fontFamily="@font/raleway_medium"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button_next"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/next_unpress"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_22sdp">

        <TextView
            android:id="@+id/detail_textview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="dvsvsvd"
            android:textAlignment="textStart"
            android:lineSpacingExtra="@dimen/_8sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:fontFamily="@font/raleway_light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_list"
    android:layout_height="match_parent"
    tools:context="com.example.admin.recipedb.SubMenu">

        <LinearLayout
            android:background="@drawable/topbar"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="112px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="90px"
                android:layout_height="90px"
                android:paddingLeft="@dimen/_8sdp"
                android:src="@drawable/previous_unpress" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sub Menu"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/_18sdp"
                android:singleLine="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/previous1"
                android:layout_width="60px"
                android:layout_height="90px"
                android:visibility="invisible"
                android:src="@drawable/previous_press" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:divider="@android:color/white"
            android:dividerHeight="@dimen/_1sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:scrollbars="none"
            android:paddingRight="@dimen/_8sdp"
            android:id="@+id/submenu_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</LinearLayout>
